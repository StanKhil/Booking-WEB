@model Booking_WEB.Models.Realty.BookingsAndTripsModel
@using System.Security.Claims;
@using Booking_WEB.Data.Entities;

<div class="container mb-5">
    @if(Model.BookingItems.Count() == 0)
    {
        <div>
            <h1 class="fs-1 fw-bold mt-5">Bookings & Trips</h1>
        </div>
        <div class="d-flex mt-5">
            <div class="w-25">
                <picture>
                    <img class="h-auto w-100" src="~/resources/images/BookingsTrips/TripsGlobe.png" />
                </picture>
            </div>
            <div class="mx-4 d-flex align-items-center">
                <div class="mb-5">
                    <div class="mb-3"><span class="fs-4 fw-bold">Where to next?</span><br /></div>
                    <div><span class="fs-5">You haven’t started any trips yet. Once you make a booking, it'll appear here.</span></div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container mt-5">
            @foreach (var bookingItem in Model.BookingItems)
            {
                <a asp-action="Item" asp-route-id="@(bookingItem.Realty.Slug ?? bookingItem.Realty.Id.ToString())" class="nav-link">
                    @Html.DisplayFor(m => bookingItem, "BookingItem")
                </a>
            }
        </div>
    }
</div>

