@{
    ViewData["Title"] = "Search";
}

<div class="container-fluid search-bar-container">
    <div class="container">
        <div class="row gx-2 align-items-center">
            <div class="col-lg-4 col-md-5 mb-2 mb-lg-0">
                <div class="input-group search-input-group">
                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                    <input id="destination-input" type="text" class="form-control" placeholder="Where are you going?">
                </div>
            </div>
            <div class="col-lg-4 col-md-5 mb-2 mb-lg-0">
                <div class="input-group search-input-group">
                    <span class="input-group-text"><i class="bi bi-calendar-date"></i></span>
                    <input id="date-input" type="date" class="form-control">
                </div>
            </div>
            <div class="col-lg-4 col-md-5">
                <button id="search-button" type="button" class="btn search-button w-100">Search</button>
            </div>
        </div>
    </div>
</div>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-transparent mb-2 ps-0">
        @* TODO: This one is for 'Ukraine/Kyiv/...'*@
    </ol>
</nav>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="filter-section">
                <h5>Filter by:</h5>
                <div class="mb-3">
                    <h6>Your budget (per night)</h6>
                    <input type="range" class="form-range range-slider" min="100" max="4000" value="2000" id="priceRange">
                    <div class="d-flex justify-content-between">
                        <span>UAH 100</span>
                        <span>UAH 4,000+</span>
                    </div>
                </div>

                @* TODO: Calculate numbers *@
                <div class="mb-3">
                    <h6>Property type</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="hotelsFilter">
                        <label class="form-check-label" for="hotelsFilter">
                            Hotels <span class="text-muted">(number)</span>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="apartmentsFilter">
                        <label class="form-check-label" for="apartmentsFilter">
                            Apartments <span class="text-muted">(number)</span>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="villasFilter">
                        <label class="form-check-label" for="villasFilter">
                            Villas <span class="text-muted">(number)</span>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="housesFilter">
                        <label class="form-check-label" for="housesFilter">
                            Houses <span class="text-muted">(number)</span>
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <h6>Property rating</h6>
                    <input type="range" class="form-range range-slider" min="1" max="5" value="3" id="ratingRange"/>
                    <div class="d-flex justify-content-between">
                        <span>1</span>
                        <span>5</span>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="results-count">(Country/City): properties found</h4>
                <div class="sort-options d-flex align-items-center">
                    <label for="sortOrder" class="form-label mb-0">Sort by:</label>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            Our top picks <i class="bi bi-caret-down-fill"></i>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="#">Price (lowest first)</a></li>
                            <li><a class="dropdown-item" href="#">Price (highest first)</a></li>
                            <li><a class="dropdown-item" href="#">Review score and price</a></li>
                            <li><a class="dropdown-item" href="#">Top reviewed</a></li>
                        </ul>
                    </div>
                </div>
            </div>

